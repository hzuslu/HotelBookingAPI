@model SendMessageDTO

@{
    ViewData["Title"] = "SendEmail";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="content-body">
    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/AdminContact/Inbox">
                        <i class="fa fa-arrow-left" aria-hidden="true" style="margin-right : 5px"></i> Inbox
                    </a>
                </li>
            </ol>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="email-left-box">
                            @await Component.InvokeAsync("_ContactSidebarPartial")
                        </div>
                        <div class="email-right-box">
                            <div class="compose-content mt-5">
                                <form asp-action="SendEmail" asp-controller="AdminContact" method="post">
                                    <input type="hidden" asp-for="ContactID"></>

                                    <div class="form-group">
                                        <label asp-for="Email">To:</label>
                                        <input asp-for="Email" class="form-control bg-transparent" readonly />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ResponseMessage">Message:</label>
                                        <textarea asp-for="ResponseMessage" class="textarea_editor form-control bg-light" rows="10" placeholder="Write your message..." required></textarea>
                                        <span asp-validation-for="ResponseMessage" class="text-danger"></span>
                                    </div>
                                    <div class="text-left m-t-15">
                                        <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10" type="submit">
                                            <i class="fa fa-paper-plane m-r-5"></i> Send
                                        </button>
                                        <a href="@Url.Action("Inbox", "AdminContact")" class="btn btn-dark m-b-30 m-t-15 f-s-14 p-l-20 p-r-20">
                                            <i class="ti-close m-r-5 f-s-12"></i> Discard
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
