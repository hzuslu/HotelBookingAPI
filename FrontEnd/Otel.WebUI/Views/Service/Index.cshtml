@model List<ResultServiceDTO>

@{
    ViewData["Title"] = "Service Management";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="container mt-4">
    <h2 class="text-center mb-4">Service Management</h2>

    <div class="d-flex justify-content-end mb-3">
        <a href="@Url.Action("AddService", "Service")" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> New Service
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover align-middle">
            <thead class="bg-dark text-white">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Service Icon</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model)
                {
                        <tr>
                            <td>@service.ServiceId</td>
                            <td class="text-center">
                                <i class="@service.ServiceIcon" style="font-size: 24px;"></i>
                            </td>
                            <td>@service.Title</td>
                            <td>@service.Description</td>
                            <td class="text-center">
                                <a href="@Url.Action("UpdateService", "Service", new { id = service.ServiceId })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a href="@Url.Action("DeleteService", "Service", new { id = service.ServiceId })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this service?');">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
