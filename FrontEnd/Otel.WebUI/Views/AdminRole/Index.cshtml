@model List<Otel.EntityLayer.Concrete.AppRole>

@{
    ViewData["Title"] = "Role Management";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Role Management</h2>

    <div class="mb-3">
        <a href="@Url.Action("AddRole", "AdminRole")" class="btn btn-primary">Add New Role</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Role Name</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                            <td class="text-center">
                                <a href="@Url.Action("UpdateRole", "AdminRole", new { id = role.Id })" class="btn btn-warning btn-sm">Edit</a>
                                <a href="@Url.Action("DeleteRole", "AdminRole", new { id = role.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this role?');">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No roles found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Error"]
        </div>
    }
</div>
