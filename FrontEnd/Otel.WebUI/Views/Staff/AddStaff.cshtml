@model AddStaffViewModel

@{
    ViewData["Title"] = "AddStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Link1" class="control-label"></label>
        <input asp-for="Link1" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Link2" class="control-label"></label>
        <input asp-for="Link2" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Link3" class="control-label"></label>
        <input asp-for="Link3" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Staff</button>
    </div>
</form>
