@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Error - 400 Bad Request</title>
    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/adminweb/images/favicon.png">
    <!-- Custom CSS -->
    <link href="~/adminweb/css/style.css" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f4f4f4;
            font-family: 'Arial', sans-serif;
        }

        .error-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            width: 100%;
        }

        .error-title {
            font-size: 72px;
            font-weight: bold;
            color: #ff6b6b;
        }

        .error-text {
            font-size: 20px;
            margin-top: 10px;
            color: #333;
        }

        .error-desc {
            margin-top: 10px;
            color: #888;
            font-size: 16px;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 5px;
            margin-top: 20px;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .icon {
            font-size: 50px;
            color: #ff6b6b;
        }
    </style>
</head>

<body>

    <div class="error-container">
        <h1 class="error-title">Oops!</h1>
        <span class="icon">
            <i class="fa fa-exclamation-triangle"></i>
        </span>
        <p class="error-text">400 - Bad Request</p>
        <p class="error-desc">The server could not understand your request. Please try again or return to the homepage.</p>
        <a href="/Default/Index" class="btn btn-primary">Return to Homepage</a>
    </div>

    <script src="~/adminweb/plugins/common/common.min.js"></script>
    <script src="~/adminweb/js/custom.min.js"></script>
    <script src="~/adminweb/js/settings.js"></script>
    <script src="~/adminweb/js/gleek.js"></script>
    <script src="~/adminweb/js/styleSwitcher.js"></script>
</body>
</html>
