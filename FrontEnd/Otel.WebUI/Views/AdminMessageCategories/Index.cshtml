@model List<ResultMessageCategoryDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Message Category Management</h2>

    <div class="mb-3">
        <a href="@Url.Action("AddMessageCategory", "AdminMessageCategories")" class="btn btn-primary">New Message Category</a>
    </div>

    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Category Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MessageCategoryId</td>
                    <td>@item.MessageCategoryName</td>
                    <td>
                        <a href="@Url.Action("UpdateMessageCategory", "AdminMessageCategories", new { id = item.MessageCategoryId })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("DeleteMessageCategory", "AdminMessageCategories", new { id = item.MessageCategoryId })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
