@model CreateMessageCategoryDTO

@{
    ViewData["Title"] = "AddMessageCategory";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">

    <div class="form-group">
        <label asp-for="MessageCategoryName" class="control-label"></label>
        <input asp-for="MessageCategoryName" class="form-control" />
        <span asp-validation-for="MessageCategoryName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Message Category</button>
    </div>
</form>


