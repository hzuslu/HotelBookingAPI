@model List<RoleAssignViewModel>

@{
    ViewData["Title"] = "Edit User Roles";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Edit User Roles</h2>

    <form method="post" class="bg-light p-4 rounded shadow">
        <div class="mb-4">
            <label class="form-label">Select Roles:</label>
            <div class="row">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="col-md-4 mb-3">
                        <div class="form-check">
                            <input type="hidden" asp-for="@Model[i].RoleId" />
                            <input type="hidden" asp-for="@Model[i].RoleName" />
                            <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
                            <label class="form-check-label" asp-for="@Model[i].RoleExist">@Model[i].RoleName</label>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success">Update Roles</button>
            <a href="@Url.Action("Index", "AdminRoleAssign")" class="btn btn-secondary ms-2">Cancel</a>
        </div>

    </form>
</div>

<style>
    .form-check {
        padding: 0.5rem;
        border-radius: 0.25rem;
        margin-bottom: 0.5rem;
        transition: background-color 0.3s;
    }
</style>
