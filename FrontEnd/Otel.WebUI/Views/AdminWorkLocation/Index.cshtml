@model List<ResultWorkLocationDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Work Location Management</h2>

    <div class="mb-3">
        <a href="@Url.Action("AddWorkLocation", "AdminWorkLocation")" class="btn btn-primary">New Work Location</a>
    </div>

    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">City</th>
                <th scope="col">Country</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var workLocation in Model)
            {
                <tr>
                    <td>@workLocation.WorkLocationId</td>
                    <td>@workLocation.WorkLocationCityName</td>
                    <td>@workLocation.WorkLocationCountry</td>
                    <td>
                        <a href="@Url.Action("UpdateWorkLocation", "AdminWorkLocation", new { id = workLocation.WorkLocationId })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("DeleteWorkLocation", "AdminWorkLocation", new { id = workLocation.WorkLocationId })" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this work location?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
